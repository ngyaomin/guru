<h1> listing of pujas available </h1>

<% @pujas.each do |puja| %>

    <p>Name: <%= puja.name %> </p>
    <p>Description:<br> <%= puja.description.truncate_words(25) %> </p>
    <p>Benefit:<br> <%= puja.benefit.truncate_words(25) %> </p>
    <p>Suggested_offering: <%= puja.suggested_offering %> </p>
    <%= link_to 'More Details', puja_path(puja) %> <br>
    <% if can? :update, @puja %>
      <%= link_to 'Edit', edit_puja_path(puja) %>
    <% end %>
    <% if can? :destroy, @puja %>
      <%= link_to 'Destroy', puja_path(puja),
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
    <% end %>
     <br>

<% end %>


<% if can? :create, @puja %>
  <%= link_to 'New puja', new_puja_path %>
<% end %>
<!-- note that this link would be lock in the future so that only admin can access -->
<br>
<div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @pujas %>
    </div>
    <%= will_paginate @pujas, :container => false %>
  </div>
