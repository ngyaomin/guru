<h1>Edit puja here</h1>



<%= form_for :puja, url: pujas_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :benefit %><br>
    <%= f.text_area :benefit %>
  </p>

  <p>
    <%= f.label :suggested_offering %><br>
    <%= f.text_field :suggested_offering %>
  </p>


  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', pujas_path %>
